<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.contacts.lhj.jennifercontacts">

    <!-- 读联系人权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 写联系人权限 -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <!-- 拨号权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 读短信权限 -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <!-- 写通话记录权限 -->
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <!-- 读通话记录权限 -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <!-- 指纹权限 -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        android:name=".ContactsApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_home"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="view.main.WelcomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/WelcomeFullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="view.contacts.ContactPersonalInfoActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name="view.messages.MessageDialogActivity" />
        <activity
            android:name="view.main.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="view.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="view.main.GuideActivity"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <service
            android:name="presenter.main.MainService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name="view.main.GestureLoginActivity" />
        <activity
            android:name="view.contacts.ContactPersonalHomeActivity"
            android:label="@string/title_activity_contact_personal_home"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>